@model DsiVendas.Models.Produto

<h1 class="my-4">Editar Produto</h1>

<form asp-action="Editar" method="post" class="needs-validation" novalidate>
    <div class="form-group w-50">
        <label class="form-label">Nome</label>
        <input asp-for="Nome" class="form-control" required />
    </div>
    <div class="form-group w-50 mb-3">
        <label class="form-label">Pre√ßo</label>
        <input asp-for="Preco" class="form-control" required />
    </div>
    <div class="form-group w-50 mb-3">
        <label class="form-label">Codigo do Fornecedor</label>
        <select asp-for="FornecedorId" class="form-control"
            asp-items="@(new SelectList(ViewBag.Fornecedores, "Id", "Nome"))" required>
            <option value="">Selecione um Fornecedor</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary ml-2">Voltar</a>
</form>
